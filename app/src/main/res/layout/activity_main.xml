<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

<!--    <ImageView-->
<!--            android:id="@+id/pdfImage"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="match_parent"-->
<!--            android:background="@android:color/white"-->
<!--            android:contentDescription="@null"-->
<!--            android:scaleType="fitCenter" />-->
    <LinearLayout
            android:id="@+id/pdfLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginBottom="4dp">
        <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="55dp">
            <TextView
                    android:text="TextView"
                    android:layout_width="276dp"
                    android:textSize="30dp"
                    android:layout_height="match_parent" android:id="@+id/pdfName"
                    android:layout_alignParentStart="true" android:layout_marginStart="22dp"
                    android:layout_alignParentLeft="true" android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp" android:layout_marginLeft="22dp"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="132dp"
                    android:layout_height="match_parent" android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="163dp"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"
                    android:layout_marginRight="163dp">
                <ImageButton
                        android:layout_width="wrap_content"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_height="wrap_content" app:srcCompat="@drawable/undo"
                        android:id="@+id/undo"/>
                <ImageButton
                        android:layout_width="58dp"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:layout_height="match_parent" app:srcCompat="@drawable/redo"
                        android:id="@+id/redo" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="249dp"
                    android:layout_height="143dp"
                    android:layout_marginEnd="298dp" android:layout_marginTop="2dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="298dp" android:layout_alignParentEnd="true"
            >
                <ImageButton
                        android:layout_width="50dp"
                        android:layout_height="match_parent" app:srcCompat="@drawable/left_arrow"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:id="@+id/left_arrow" android:layout_weight="1"/>
                <TextView
                        android:text="1/55"
                        android:textSize="30dp"
                        android:layout_width="82dp"
                        android:gravity="center"
                        android:layout_height="match_parent" android:id="@+id/pageNum" android:layout_weight="1"/>
                <ImageButton
                        android:layout_width="51dp"
                        android:layout_height="match_parent" app:srcCompat="@drawable/right_arrow"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:id="@+id/right_arrow" android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="162dp"
                    android:layout_height="76dp" android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
                    android:layout_marginEnd="0dp" android:layout_marginTop="0dp" android:layout_marginRight="0dp">
                <ImageButton
                        android:layout_width="53dp"
                        android:layout_height="57dp" app:srcCompat="@drawable/paint_brush"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:id="@+id/brush"/>
                <ImageButton
                        android:layout_width="56dp"
                        android:layout_height="58dp" app:srcCompat="@drawable/highlighter"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:id="@+id/highlighter"/>
                <ImageButton
                        android:layout_width="34dp"
                        android:layout_height="58dp" app:srcCompat="@drawable/eraser"
                        android:scaleType="fitCenter"
                        android:adjustViewBounds="true"
                        android:id="@+id/eraser" android:layout_weight="1"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>